<mvc:View
	controllerName="OpenUI5.controller.contents5.ActionSelect"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<ActionSelect
			id="select"
			items="{
				path: '/Resource',
				sorter: { path: 'Name' }
			}">
			<items>
				<core:Item key="{Name}" text="{Name}" />
			</items>
		</ActionSelect>
	</l:VerticalLayout>
</mvc:View>