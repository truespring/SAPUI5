        <HBox>
            <Text text="{i18n>columnOrder}" class="sapUiSmallMarginEnd"/>
            <Text text="{invoice>OrderNo}"/>
        </HBox>
        <HBox>
            <Text text="{i18n>columnSupplier}" class="sapUiSmallMarginEnd"/>
            <Text text="{invoice>Supplier}"/>
        </HBox>
        <HBox>
            <Text text="{i18n>columnDeadline}" class="sapUiSmallMarginEnd"/>
            <Text text="{invoice>Deadline}"/>
        </HBox>
        <HBox>
            <Text text="{i18n>columnName}" class="sapUiSmallMarginEnd"/>
            <Text text="{invoice>Name}"/>
        </HBox>
        <HBox>
            <Text text="{i18n>columnSize}" class="sapUiSmallMarginEnd"/>
            <Text text="{invoice>Size}"/>
        </HBox>
        <HBox>
            <Text text="{i18n>columnQuantity}" class="sapUiSmallMarginEnd"/>
            <Text text="{invoice>Quantity}"/>
        </HBox>
        <HBox>
        <!-- 생산 수량 -->
            <Text text="{i18n>quantityProduction}" class="sapUiSmallMarginEnd"/>
            <Input type="Number" value="100" placeholder="생산수량"/>
        </HBox>
        <HBox>
        <!-- 계획 기간 -->
            <Text text="{i18n>planningPeriod}" class="sapUiSmallMarginEnd"/>
            <Input type="Date"/>
            <Input type="Date" value="2020-12-29"/>
        </HBox>
        <HBox>
        <!-- 원자재 -->
            <Text text="{i18n>columnResource}" class="sapUiSmallMarginEnd"/>
            <l:VerticalLayout
                class="sapUiContentPadding"
                width="100%">
                <ActionSelect
                    id="select"
                    items="{
                        path: '/Resource',
                        sorter: { path: 'Name' }
                    }">
                    <items>
                        <core:Item key="{Name}" text="{Name}" />
                    </items>
                </ActionSelect>
            </l:VerticalLayout>
        </HBox>
        <HBox>
        <!-- 소요량 -->
            <Text text="{i18n>columnAmount}" class="sapUiSmallMarginEnd"/>
            <Input type="Number" value="0" placeholder="소요량"/>
        </HBox>
        <HBox>
        <!-- 외주 여부 -->
            <Text text="{i18n>outsorucing}" class="sapUiSmallMarginEnd"/>
            <l:VerticalLayout
                class="sapUiContentPadding"
                width="100%">
                <ActionSelect
                    id="select_2"
                    items="{
                        path: '/Outsourcing',
                        sorter: { path: 'Name' }
                    }">
                    <items>
                        <core:Item key="{Name}" text="{Name}" />
                    </items>
                </ActionSelect>
            </l:VerticalLayout>
        </HBox>
        <Button
            text="저장"
            press=".onNavSave"/>
        <Button
            text="목록"
            press=".onNavBack"/>
    </Panel>
</mvc:View>