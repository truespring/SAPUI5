    controllerName="OpenUI5.controller.contents5.Detail"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Text text="생산관리계획"/>
    <Panel accessibleRole="Region">
