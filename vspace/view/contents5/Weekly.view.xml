<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel accessibleRole="Region">
		<Text text="검색 기준일(월)"/>
        <Input type="Month" width="40%"/>
		<Table
			id="WeeklyList"
			class="sapUiResponsiveMargin"
			width="auto"
			items="{
				path : 'invoice>/Monthly'
			}">
			<columns>
				<Column
					minScreenWidth="Small"
					demandPopin="true"
					width="5em">
					<Text text="{i18n>lineItem}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="true">
					<Text text="{i18n>standard}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="false">
					<Text text="{i18n>one}{i18n>week}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="false">
					<Text text="{i18n>two}{i18n>week}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="false">
					<Text text="{i18n>three}{i18n>week}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="false">
					<Text text="{i18n>four}{i18n>week}"/>
				</Column>
				<Column
					minScreenWidth="Small"
					demandPopin="false">
					<Text text="{i18n>five}{i18n>week}"/>
				</Column>
				<Column
					hAlign="End"
					minScreenWidth="Small"
					demandPopin="true">
					<Text text="{i18n>total}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
</mvc:View>