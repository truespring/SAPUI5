<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="OpenUI5.controller.contents.board.BoardList">
    <Panel accessibleRole="Region">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>boardListTitle}"/>
                <ToolbarSpacer/>
                <SearchField
                    width="50%"
                    search=".onFilterBoard"
                    ariaLabelledBy="searchFieldLabel"
                    ariaDescribedBy="searchFieldDescription"
                    placeholder="단어를 검색하세요"/>
            </Toolbar>
        </headerToolbar>
        <Table
            id="boardList"
            class=""
            width="auto"
            items="{
                path : 'board>Board'
            }">
            <columns>
                <Column
                    hAlign="End"
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="4em">
                    <Text text="{i18n>boardTitle}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true">
                    <Text text="{i18n>boardAuthor}"/>
                </Column>
                <Column
                    hAlign="End"
                    demandPopin="false">
                    <Text text="{i18n>boardDate}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    type="Navigation"
                    press=".onPress">
                    <cells>
                        <ObjectIdentifier title="{board>BoardTitle}"/>
                        <Text text="{board>BoardAuthor}"/>
                        <ObjectAttribute title="{board>BoardDate}" text="{
                            path: '',
                            formatOptions: {
                                style: 'long',
                                source: {
                                    pattern: 'yyyy-MM-ddTHH:mm:ss'
                                }
                            }
                        }"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>

