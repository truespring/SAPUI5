<mvc:View
    controllerName="OpenUI5.controller.contents6.Detail_process"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Text text="공정관리계획"/>
    <Panel accessibleRole="Region">
        <Table
            id="detail_process"
            class=""
            width="auto"
            items="{
				path : 'invoice>/Process_plan'
			}">
            <columns>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="5em">
                    <Text text="{i18n>columnNumber}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="6em">
                    <Text text="{i18n>processName}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="6em">
                    <Text text="{i18n>columnQuantity}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="6em">
                    <Text text="{i18n>outsorucing}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="6em">
                    <Text text="{i18n>startday}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="6em">
                    <Text text="{i18n>endday}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="6em">
                    <Text text="{i18n>leadday}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    width="6em">
                    <Text text="{i18n>worker}"/>
                </Column>
            </columns>
            <items>
				<ColumnListItem>
					<cells>
						<ObjectNumber
							number="{
								parts: [{path: 'invoice>Number'}],
								formatOptions: {
									showMeasure: true
								}
							}"/>
						<Text text="{invoice>Name}"/>
						<ObjectNumber number="{invoice>Quantity}" emphasized="false"/>
						<ObjectNumber number="{invoice>lead}" emphasized="false"/>
					</cells>
				</ColumnListItem>
			</items>
        </Table>
        <Button
            text="저장"
            press=".onNavSave"/>
        <Button
            text="목록"
            press=".onNavBack"/>
    </Panel>
</mvc:View>